mixin modal-sort()
  .sort-wrapper
    ul.sort-wrapper__list
      li.sort-wrapper__item
        button.sort-wrapper__button(type="button" value="expen") Сначала дорогие
      li.sort-wrapper__item
        button.sort-wrapper__button(type="button" value="notexpen") Сначала недорогие
      li.sort-wrapper__item
        button.sort-wrapper__button(type="button" value="popular") Сначала популярные
      li.sort-wrapper__item
        button.sort-wrapper__button(type="button" value="new") Сначала новые
